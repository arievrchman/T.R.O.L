<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
  <title>To Refresh Our Life</title>
</head>

<body>

  <!-- Navbar goes here -->
  <nav>
    <div class="nav-wrapper grey darken-4">
      <!-- <a href="#" class="brand-logo">Logo</a> -->
      <ul id="nav-mobile" class="right hide-on-med-and-down">
        <% if (tmp.id) { %>
          <li><a href="collapsible.html">Logout</a></li>
        <% } %>
      </ul>
    </div>

  </nav>

  <!-- Page Layout here -->
  <div>
    <form action="/home/faceRecognition" method="POST">
      <input name="link">
      <button type="submit">submit</button>
    </form>
   
  </div>

  <div class="row">
    <div class="col s12 m4 l3">
      <!--   -->
      <h6 style="color: red">
          <%= typeof msg != 'undefined' ? msg : '' %>
      </h6>
      <form action="/home" method="POST" enctype="multipart/form-data">
        <div class="left-align">
          Caption
          <input type="text" name="caption">
        </div>
        <div class="file-field input-field ch-file">
          <div class="btn-small grey darken-5"">
            <input type="file" name="img">
            <span>...</span>
          </div>
          <div class="file-path-wrapper">
            <input class="file-path validate" type="text">
          </div>
        </div>

        <div class="input-field col left-align">
          <select name="TagId">
            <option value="" disabled selected>Choose tag</option>
            <option value="1">Anger</option>
            <option value="2">Contempt</option>
            <option value="3">Disgust</option>
            <option value="4">Fear</option>
            <option value="5">Happiness</option>
            <option value="6">Neutral</option>
            <option value="7">Sadness</option>
            <option value="8">Surprise</option>
          </select>
          <label>Tag</label>
        </div>

        <div class="right-align">
          <button type="submit" class="btn">Submit</button>
        </div>
      </form>
      <!--  -->
    </div>

    <div class="col s12 m8 l9">

      <div class="post">
        <% data.forEach(post => { %>
        <h3>
          <%= post.caption %>
        </h3>
        <p>posted by:</p>
        <img src="<%= post.path_directory.slice(7) %>" class="responsive-img">
        <% }) %>
      </div>

    </div>

  </div>


  <script src="https://code.jquery.com/jquery-3.3.1.min.js" integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8="
    crossorigin="anonymous"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
  <script>
    $(document).ready(function () {
      $('select').formSelect();
    });
  </script>
</body>

</html>